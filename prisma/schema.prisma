datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Billboard {
  id                     Int     @id @default(autoincrement())
  market                 String
  vendor                 String
  mediaType              String
  unitNumber             String
  tabId                  String
  numberOfUnits          Int
  description            String
  face                   String
  size                   String
  pixels                 String
  illuminated            Boolean
  weeklyEOIs             Int     @map("A18+ WEEKLY EOI'S")
  fourWeekImp            Int     @map("4 week IMP")
  latitude               Float
  longitude              Float
  availableTiming        String?
  fourWeekRateCard       Int     @map("4-Week Rate Card")
  fourWeekNegotiatedCost Int     @map("4-Week Negotiated Cost")
  installsIncluded       Int?    @map("# of Installs Included")
  additionalInstallCost  Int?    @map("Cost per Additional Installations")
  productionCost         Int?    @map("Production Cost (1x - if forced)")
  shippingAddress        String?
  artworkDeadline        String?
  ownerId                Int
  owner                  Owner   @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
}

model Owner {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  billboards Billboard[]
}
